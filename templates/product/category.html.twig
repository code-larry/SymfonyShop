{% extends "base.html.twig" %}

{% block title %}
	Catégorie : {{ category.name }}
{% endblock title %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a href="#">Accueil</a></li>
		<li class="breadcrumb-item"><a href="#">{{ category.name }}</a></li>
	</ol>
	<h1>Catégorie : {{ category.name }}</h1>
	<div class="row">
		{% for product in category.products %}
		<div class="col-3">
			<div class="card">
				<img src="{{ product.picture }}" class="img-fluid" alt="Image du produit">
				<div class="card-body">
					<h4 class="card-title">{{ product.name }} ({{ product.price / 100 }} &euro;)</h4>
					<span class="badge badge-info">{{ product.category.name }}</span>
					<p class="card-text">{{ product.shortDescription }}</p>
					<a href="#" class="btn btn-primary btn-sm">Détails</a>
					<a href="#" class="btn btn-success btn-sm">Ajouter</a>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
{% endblock body %}