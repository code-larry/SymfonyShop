{% extends "base.html.twig" %}

{% block title %}
	Page de {{ product.name }}
{% endblock title %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{ path('product_category', {slug: product.category.slug}) }}">{{ product.category.name }}</a>
		</li>
		<li class="breadcrumb-item active">{{ product.name }}</li>
	</ol>
	<h1>{{ product.name }} ({{ product.price | amount }})</h1>

	<div class="row">
		<div class="col-4">
			<img class="img-fluid" src="{{ product.picture }}" class="img-fluid" alt="Image de {{ product.name }}">
		</div>

		<div class="col">
			<span class="badge badge-primary">{{ product.category.name }}</span>
			<p>{{ product.shortDescription }}</p>
			<a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-success btn-lg">
				<i class="fas fa-shopping-cart"></i>
				Ajouter au panier
			</a>
			<a href="{{ path('product_edit', {id: product.id}) }}" class="btn btn-warning btn-lg">Modifier</a>
		</div>
	</div>
{% endblock body %}