{% extends "base.html.twig" %}

{% block title %}
	Page de {{ product.name }}
{% endblock title %}

{% block body %}
	<h1>{{ product.name }} ({{ product.price / 100 }} &euro;)</h1>

	<div class="row">
		<div class="col-4">
			<img class="img-fluid" src="{{ product.picture }}" class="img-fluid" alt="Image de {{ product.name }}">
		</div>

		<div class="col">
			<span class="badge badge-primary">{{ product.category.name }}</span>
			<p>{{ product.shortDescription }}</p>
			<a href="#" class="btn btn-success btn-lg">
				<i class="fas fa-shopping-cart"></i>
				Ajouter au panier
			</a>
		</div>
	</div>
{% endblock body %}